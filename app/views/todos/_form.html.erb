<%= form_for(@todo) do |f| %>
  <input type="hidden" name="author" value="<%= current_user.id %>"></input>
  <% if @todo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
      <% @todo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
	<% end %>

	<table>
		<tr>
			<td>구분:
			<%= f.select(:category, options_for_select(["SVR", "WAS", "DB"])) %>
			</td>
			<td>상태:
				<%= f.select(:status, options_for_select(["진행중", "완료"])) %>
			</td>
		</tr>
		<tr>
			<td>요청팀: <%= f.text_field :request_team, :size => 10 %></td>
			<td>요청자: <%= f.text_field :request_user, :size => 10 %></td>
			<td>담당자: <%= f.text_field :owner, :size => 10 %></td>
		</tr>
		<tr>
			<td>시작일</td>
			<td>완료예정일</td>
			<td>완료일</td>
		</tr>
		<tr>
			<td><%= f.date_select :started, :size => 10 %></td>
			<td><%= f.date_select :due, :size => 10 %></td>
			<td><%= f.date_select :finished, :size => 10 %></td>
		</tr>
	</table>

	<table>
		<tr>
			<td>내용</td>
			<td>비고</td>
		</tr>
		<tr>
			<td><%= f.text_area :description, :rows => 5 %></td>
			<td><%= f.text_area :note, :rows => 5 %></td>
		</tr>
	</table>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
